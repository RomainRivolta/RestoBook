@model RestoBook.Models.BigRestaurant

@{
    ViewBag.Title = "Proposer";
}

<h2>Proposer</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.NomRestaurants.Nom)
                @Html.EditorFor(model => model.NomRestaurants.Nom, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NomRestaurants.Nom, string.Empty, new { @class = "text-danger" })
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
            @Html.LabelFor(model=>model.TypeRestaurants.Type)
            @Html.DropDownList("TypeRestaurant", (SelectList)ViewBag.TypeRestaurant, "Type de cuisine", new { @class = "form-control" })
            @Html.EditorFor(model => model.TypeRestaurants.Type, new { htmlAttributes = new { @class = "form-control" } })               
            @Html.ValidationMessageFor(model => model.TypeRestaurants.Type, string.Empty, new { @class = "text-danger" })
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.VilleRestaurants.Ville)
                @Html.DropDownList("VilleRestaurant", (SelectList)ViewBag.VilleRestaurant, "Ville", new { @class = "form-control" })
                @Html.EditorFor(model => model.VilleRestaurants.Ville, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.VilleRestaurants.Ville, string.Empty, new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-default">Proposer</button>
    <button type="reset" class="btn btn-default">Cancel</button>
}
